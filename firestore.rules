rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==== USERS COLLECTION ====
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // ==== BIOFEEDBACK SUBCOLLECTION ====
      // Allow users to read/write their own biofeedback data
      match /biofeedback/{documentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Additional validation for write operations
        allow create: if request.auth != null 
          && request.auth.uid == userId
          && isValidBiofeedbackData(request.resource.data);
        
        allow update: if request.auth != null 
          && request.auth.uid == userId
          && isValidBiofeedbackData(request.resource.data);
      }
      
      // ==== MOOD SESSIONS SUBCOLLECTION ====  
      // Allow users to read/write their own mood session data
      match /mood_sessions/{documentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Additional validation for write operations
        allow create: if request.auth != null 
          && request.auth.uid == userId
          && isValidMoodSessionData(request.resource.data);
        
        allow update: if request.auth != null 
          && request.auth.uid == userId
          && isValidMoodSessionData(request.resource.data);
      }
      
      // ==== CHAT SESSIONS SUBCOLLECTION ====
      // Allow users to read/write their own chat sessions
      match /chat_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Additional validation for write operations
        allow create: if request.auth != null 
          && request.auth.uid == userId
          && isValidChatSessionData(request.resource.data);
        
        allow update: if request.auth != null 
          && request.auth.uid == userId;
        
        // ==== CHAT MESSAGES SUBCOLLECTION ====
        // Allow users to read/write messages within their chat sessions
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
          
          // Additional validation for write operations
          allow create: if request.auth != null 
            && request.auth.uid == userId
            && isValidChatMessageData(request.resource.data);
        }
      }
      
      // ==== AUDIO TRACKS SUBCOLLECTION ====
      // Allow users to read/write their own audio healing tracks
      match /audio_tracks/{trackId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Additional validation for write operations
        allow create: if request.auth != null 
          && request.auth.uid == userId
          && isValidAudioTrackData(request.resource.data);
        
        allow update: if request.auth != null 
          && request.auth.uid == userId
          && isValidAudioTrackData(request.resource.data);
        
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ==== HELPER FUNCTIONS ====
    
    // Validate biofeedback data structure
    function isValidBiofeedbackData(data) {
      return data.keys().hasAll(['userId', 'bpm', 'method', 'timestamp']) &&
             data.userId is string &&
             data.bpm is int &&
             data.bpm >= 30 &&
             data.bpm <= 220 &&
             data.method in ['camera', 'smartwatch', 'manual'] &&
             data.timestamp is timestamp;
    }
    
    // Validate mood session data structure  
    function isValidMoodSessionData(data) {
      return data.keys().hasAll(['emotion', 'confidence', 'timestamp', 'sessionType']) &&
             data.emotion is string &&
             data.confidence is number &&
             data.confidence >= 0 &&
             data.confidence <= 1 &&
             data.timestamp is timestamp &&
             data.sessionType is string;
    }
    
    // Validate chat session data structure
    function isValidChatSessionData(data) {
      return data.keys().hasAll(['id', 'title', 'lastUpdated', 'messageCount']) &&
             data.id is string &&
             data.title is string &&
             data.lastUpdated is string &&
             data.messageCount is int &&
             data.messageCount >= 0;
    }
    
    // Validate chat message data structure
    function isValidChatMessageData(data) {
      return data.keys().hasAll(['text', 'isUser', 'timestamp']) &&
             data.text is string &&
             data.isUser is bool &&
             data.timestamp is string;
    }
    
    // Validate audio track data structure
    function isValidAudioTrackData(data) {
      return data.keys().hasAll(['name', 'filePath', 'duration', 'uploadedAt']) &&
             data.name is string &&
             data.filePath is string &&
             data.duration is string &&
             data.uploadedAt is string;
    }
    
    // ==== FALLBACK DENY RULE ====
    // Deny access to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}